{
  "name": "memran/marwa-kafka",
  "description": "A lightweight, secure Kafka producer/consumer wrapper with Envelop messaging support",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Mohammad Emran",
      "email": "memran.dhk@gmail.com"
    }
  ],
  "require": {
    "php": "^8.1 || ^8.2 || ^8.3",
    "ext-rdkafka": "*",
    "memran/marwa-envelop": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "Marwa\\Kafka\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Marwa\\Kafka\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "scripts": {
    "test": "phpunit"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
